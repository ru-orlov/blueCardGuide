<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="bcbuide.ruorlov.ru.bluecardguide">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_round"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".WhoCanActivity"
            android:label="@string/who_can_get">
        </activity>
        <activity android:name=".CanIQualify"
            android:label="@string/what_i_need">
        </activity>
        <activity android:name=".ListOfSpecialities"
            android:label="@string/list_of_spec">
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />
                <action android:name="android.intent.action.VIEW" />
                <data android:scheme="bcbuide.ruorlov.ru.bluecardguide.listofspecialities" />
            </intent-filter>
        </activity>
    </application>

</manifest>